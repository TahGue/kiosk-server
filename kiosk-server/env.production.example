# Production environment configuration for kiosk-server
# Copy this to your production server as .env

# Server settings
PORT=4000
NODE_ENV=production

# CORS configuration - List your actual domains
# Multiple origins separated by comma
# Example: https://admin.example.com,https://kiosk.example.com
CORS_ORIGIN=http://localhost:4000

# Static assets directory
STATIC_DIR=public

# UI customization
KIOSK_TITLE=Production Kiosk
TIMEZONE=Europe/Berlin

# Kiosk behavior flags
DISABLE_CONTEXT_MENU=true
DISABLE_SHORTCUTS=true

# Default kiosk URL
KIOSK_URL=https://example.com

# Security limits (production values)
MAX_SSE_CLIENTS=100
MAX_HB_CLIENTS=200
MAX_HEARTBEAT_RATE=60
MAX_COMMAND_QUEUE_SIZE=50

# SSH deployment defaults (for admin UI prefill)
DEFAULT_SSH_USERNAME=kiosk
# DEFAULT_SSH_PASSWORD=  # Don't set in production, use SSH keys

# Server base URL (used in client script generation)
# This should be your public-facing URL
SERVER_BASE=http://your-server.com:4000

# Footer text
FOOTER_TEXT=Â© 2024 Your Organization

# Logging level (optional)
LOG_LEVEL=info
