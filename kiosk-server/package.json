{
  "name": "kiosk-server",
  "version": "1.0.0",
  "description": "A simple kiosk server application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:production": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "monitor": "node scripts/monitor.js",
    "setup:pm2": "bash scripts/setup-pm2.sh",
    "setup:systemd": "sudo bash scripts/setup-systemd.sh",
    "test:server": "node test-server.js",
    "deploy:mustaqbal": "bash scripts/deploy-mustaqbal.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-sslify": "^1.2.0",
    "node-arp": "^1.0.6",
    "node-ssh": "^13.1.0",
    "oui": "^12.0.61"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
